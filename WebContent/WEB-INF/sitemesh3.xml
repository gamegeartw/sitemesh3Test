<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    

  <!-- 对同一路径，启用多个装饰器 -->
  <mapping>
    <path>/*</path>
    <decorator>/WEB-INF/pages/Layouts/MasterPage.jsp</decorator>
    <decorator>/WEB-INF/pages/Layouts/MasterPage2.jsp</decorator>
    
  </mapping>
    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    
    <mapping path="/login*" exclue="true" />
</sitemesh>